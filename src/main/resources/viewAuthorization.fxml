<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unipi.dii.lsmsdb.phoneworld.controller.ControllerViewAuthorization">
   <center>
      <VBox maxHeight="540.0" maxWidth="540.0" minHeight="540.0" minWidth="540.0" prefHeight="540.0" prefWidth="540.0">
         <children>
            <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
               <VBox.margin>
                  <Insets bottom="50.0" left="175.0" right="200.0" top="50.0" />
               </VBox.margin>
               <image>
                  <Image url="@/logo-1.png" />
               </image>
            </ImageView>
            <Region VBox.vgrow="ALWAYS" />
            <Button fx:id="buttonAccess" mnemonicParsing="false" onAction="#actionOnClickLog" prefHeight="52.0" prefWidth="195.0" text="LOG IN">
               <VBox.margin>
                  <Insets bottom="50.0" left="175.0" right="50.0" />
               </VBox.margin>
            </Button>
            <Region VBox.vgrow="ALWAYS" />
            <Button fx:id="buttonRegistration" layoutX="10.0" layoutY="160.0" mnemonicParsing="false" onAction="#actionOnClickSignUp" prefHeight="52.0" prefWidth="195.0" text="SIGN UP">
               <VBox.margin>
                  <Insets bottom="50.0" left="175.0" right="50.0" />
               </VBox.margin>
            </Button>
            <Region VBox.vgrow="ALWAYS" />
            <Button fx:id="buttonBack" layoutX="10.0" layoutY="184.0" mnemonicParsing="false" onAction="#actionOnClickCancel" prefHeight="52.0" prefWidth="195.0" text="CANCEL">
               <VBox.margin>
                  <Insets bottom="50.0" left="175.0" right="50.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </center>
</BorderPane>
